config_version=4

[application]

config/name="Spacegolf"
config/description="Spacegolf is a fast-paced 2D metroidvania golf platformer.

Shoot your player through gates to get to the finish portal on each level. Setup your shots by clicking and dragging your mouse, then release it to shoot your player. Pass through all gates to open the portal, then get there before it closes!

Created by phopps and thaewyn."
run/main_scene="res://main.tscn"
boot_splash/image="res://assets/background_rock.png"
boot_splash/bg_color=Color( 0.176471, 0.176471, 0.176471, 1 )
config/icon="res://icon.png"

[autoload]

main="*res://main.tscn"

[display]

window/size/width=1920
window/size/height=1080
window/dpi/allow_hidpi=true
window/handheld/orientation="sensor"
window/stretch/mode="viewport"
window/stretch/aspect="expand"

[editor]

scene_naming=2

[gui]

